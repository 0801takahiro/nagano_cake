<div>
<h2>注文情報入力</h2>

<div>
    <h2>支払方法</h2>




 <%= form_with model:@order, url: public_orders_checks_path, local:true, method: :post do |f| %>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
</div>
<div>
   <h2>お届け先</h2> 
   <%= f.radio_button :select_address, 0 %> 
   <%= f.label :address, "ご自身の住所" %><%= current_customer.full_address %><%= current_customer.full_name %></br>
   <%= f.radio_button :select_address, 1 %>
   <%= f.label :address, "登録済み住所から選択" %>
   <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address) %></br>
   <%= f.radio_button :select_address, 2 %>
   <%= f.label :address, "新しいお届け先" %>
  　　<div class="form-group">
      <%= f.label :郵便番号 %>
      <%= f.text_area :postal_code %>
      </div>
      <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_area :address %>
      </div>
      <div class="form-group">
      <%= f.label :宛名 %>
      <%= f.text_area :name %>
      </div>
        <%= f.submit "確認画面に進む" %>
  <% end %>
</div>
</div>


  