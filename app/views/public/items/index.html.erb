<div class = "genre_ber">
 <table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
      <td>
        <%= link_to item.genre.name %>  
      </td>
  </tbody>
  <% end %>
  </table>
</div>
<div　class = "newitem">
  
    <h2>新商品</h2>
    <% @items.each do |item| %>
    <div class= "itemlist">
    <%= link_to public_item_path(item) do %>
    <%= attachment_image_tag item, :image , :size => '180x180' %>
    <h3><%= item.name %></h3>
    <% end %>
    <h3>￥<%= item.add_tax_price %></h3>
    </div>
    <% end %>
  
</div>
</div>
<%= paginate @items %>