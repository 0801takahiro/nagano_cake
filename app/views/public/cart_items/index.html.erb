<h2>ショッピングカート</h2>
<dev>
 <table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <% total = 0 %>
  <% if current_customer.cart_items.present? %>
  <% @cart_items.each do |cart_item| %>
  <tbody>
     <tr>
      <td>
          <%= attachment_image_tag(cart_item.item, :image, size: "60×50",fallback: "no_image.jpg") %>
          <%= cart_item.item.name %>
      </td>
      <td><%= cart_item_item_price %></td>
      <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
          <%= f.number_field :amount, min: 1, max:10, id: "amount_cart"%>
          <%= f.submit "変更" %>
          <% end %>
      </td>
      <td>
       <% subtotal = (cart_item.item.price*cart_item.amount).to_i %>
      </td>
      <td>
       <%= link_to "商品をカートから削除する", cart_item_path(cart_item.id, cart_item), method: :delete %>
      </td>
     </tr>
  </tbody>
 </table>
 <% total += subtotal %>
 <% end %>
 <% end %>
