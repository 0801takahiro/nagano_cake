<div>
<h2>配送先編集</h2>
<%= form_with model:@address, url: public_address_path, local:true do |f| %>
  　　<div class="form-group">
      <%= f.label :郵便番号 %>
      <%= f.text_area :postal_code %>
      </div>
      <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_area :address %>
      </div>
      <div class="form-group">
      <%= f.label :宛名 %>
      <%= f.text_area :name %>
      <%= f.submit '変更内容を保存' %>
      </div>

<% end %>
</div>