<h2>会員情報編集</h2>

<%= form_with model:@customer, url: customer_registration_path, local:true  do |f| %>
  <div>
  <%= f.label :氏名 %>
  <%= f.text_area :first_name %><%= f.text_area :last_name %> 
 </div>

 <div>
  <%= f.label :フリガナ %>
  <%= f.text_area :first_name_kana %><%= f.text_area :last_name_kana %>
 </div>
 <div>
  <%= f.label :郵便番号 %>
  <%= f.text_area :postal_code %>
   
 </div>
 <div>
  <%= f.label :住所 %>
  <%= f.text_area :address %> 
 </div>
 <div>
  <%= f.label :電話番号 %>
  <%= f.text_area :telephone_number %> 
 </div>
 <div>
  <%= f.label :メールアドレス %>
  <%= f.text_area :email %> 
 </div>
  <%= f.submit "編集内容を保存" %><%= link_to "退会する", public_customers_checks_path %>
 <% end %>
</div>