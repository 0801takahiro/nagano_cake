<div>
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
<div>
 <div>名前<%= f.label :（姓） %><%= f.text_area :first_name %><%= f.label :（名） %><%= f.text_area :last_name %></div>
 <div>フリガナ<%= f.label :（セイ） %><%= f.text_area :first_name_kana %><%= f.label :（メイ） %><%= f.text_area :last_name_kana %></div>
 <div>メールアドレス<%= f.text_area :email %></div>
 <div>郵便番号（ハイフンなし）<%= f.text_area :postal_code %></div>
 <div>住所<%= f.text_area :address %></div>
 <div>電話番号（ハイフンなし）<%= f.text_area :telephone_number %></div>
 <div>パスワード（6文字以上）<%= f.text_area :password %></div>
 <div>パスワード（確認用）<%= f.text_area :password_confirmation %></div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<div>
    <h3>会員登録がお済でない方</h3>
    <div><%= link_to "こちら",new_customer_session_path %>から新規登録を行ってください</div>

</div>