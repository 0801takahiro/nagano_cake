<div>
  <div>
    <h2>商品一覧</h2><%= link_to '新規登録'  , new_admin_item_path %>
  </div>


<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
<% @items.each do |item| %>
  <tbody>
    <td><%= item.id %></td>
    <td><%= link_to item.name, admin_item_path(item.id) %></td>
    <td><%= item.price %></td>
    <td><%= item.genre.name %></td>
    <td><%= item.is_active %></td>
  </tbody>
<% end %>
</table>

<%= paginate @items %>
</div>