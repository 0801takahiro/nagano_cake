<h2>会員情報編集</h2>
<% form_with model:@customer,url: public_customers do |f| %>
<table>
  <tbody>
      <tr>
       <td>
        会員ID
       </td>
       <td>
        <%= @customer.id %>  
       </td>
      </tr>
      <tr>
       <td>
        氏名
       </td>
       <td>
        <%= f.text_area :first_name %><%= f.text_area :last_name %>  
       </td>
      </tr>
      <tr>
       <td>
        フリガナ
       </td>
       <td>
          <%= f.text_area :first_name_kana %><%= f.text_area :last_name_kana %>
       </td>
      </tr>
      <tr>
       <td>
        郵便番号
       </td>
       <td>
         <%= f.text_area :postal_code %>  
       </td>
      </tr>
      <tr>
       <td>
        住所
       </td>
       <td>
          <%= f.text_area :address %> 
       </td>
      </tr>
      <tr>
       <td>
        電話番号
       </td>
       <td>
          <%= f.text_area :telephone_number %> 
       </td>
      </tr>
      <tr>
       <td>
        メールアドレス
       </td>
       <td>
          <%= f.text_area :email %> 
       </td>
      </tr>
      <tr>
       <td>
        会員ステータス
       </td>
       <td>
          <%= f.radio_button :is_active, "true" %> 
          <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_active, "false" %> 
          <%= f.label :is_active, "退会" %>
       </td>
      </tr>
  </tbody>
  </table>
  <%= f.submit "変更を保存" %>
  <% end %>