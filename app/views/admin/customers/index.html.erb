<div>
<h2>会員一覧</h2>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
<% @customers.each do |customer| %>
  <tbody>
    <td><%= customer.id %></td>
    <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
    <td><%= customer.email %></td>
    <td><%= customer.is_active %></td>
  </tbody>
<% end %>
</table>

<%= paginate @customers %>
</div>
